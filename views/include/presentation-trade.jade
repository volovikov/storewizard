		OnClickBegin: function() {
			return Main.Slider.OnClickBegin.call(Main.TradeSlider);
		},
		OnClickEnd: function() {
			return Main.Slider.OnClickEnd.call(Main.TradeSlider);
		},
		OnClickBack: function() {
			return Main.Slider.OnClickBack.call(Main.TradeSlider);
		},
		OnClickForward: function() {
			return Main.Slider.OnClickForward.call(Main.TradeSlider);
